<Window x:Class="SaveTango.Board"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveTango"
        mc:Ignorable="d"
        Title="Board" Height="768" Width="1024" Loaded="OnWindowLoaded">
    <Window.Background>
        <ImageBrush Opacity="0.9" ImageSource="res/board_background1.jpg"></ImageBrush>
    </Window.Background>
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Height="116">
            <Label Content="Moves:" Width="132" Height="50" FontSize="30" HorizontalContentAlignment="Center" Margin="150,0,0,0" HorizontalAlignment="Left" />
            <Label Content="Level x"  Width="149" Height="50" FontSize="30" HorizontalContentAlignment="Center" Margin="120,0,0,0"/>
            <Label Content="Time: 00:00" Width="167" Height="50" FontSize="30" HorizontalContentAlignment="Center" Margin="120,0,0,0"/>
        </StackPanel>
        <Canvas Name="boardCanvas" Height="600" Width="600">
            <Image MouseDown="OnMouseDown" MouseUp="OnMouseUp" MouseMove="OnMouseMove"/>
        </Canvas>

    </StackPanel>

</Window>
